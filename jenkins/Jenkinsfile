pipeline
{

    agent any

    tools {
      maven 'Maven 3.9'
    }
    stages
    {
         stage('build')
         {
        steps{
            sh 'mvn clean package'
             }

        post {
        success{
            archiveArtifacts artifacts: '**/target/*.war'
                }
             }
        }
    }
}